  <!-- Main Content -->
  <main class="container">
    <div class="row">
        <h1><%= title %></h1>
        <br>
        <div>
            <a href="/businesscontacts/add" class="btn btn-primary align-self-end" role="button">
                <i class="fas fa-plus-circle"></i> 
                Add a new Item
            </a>                
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr>
                    <th class="text-center">Name</th>
                    <th class="text-center">Number</th>
                    <th class="text-center">Email</th>
                </tr>

                <!-- Repeatable Template Row -->
                <% for(let count = 0; count < BusinessContactsList.length; count++) { %>
                    <tr>
                        <td class="text-center"><%= BusinessContactsList[count].name %></td>
                        <td class="text-center"><%= BusinessContactsList[count].number %></td>
                        <td class="text-center"><%= BusinessContactsList[count].email %></td>
                        <td class="text-center">
                            <a href="/businesscontacts/edit/<%= BusinessContactsList[count]._id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i></a>
                        </td>
                        <td class="text-center">
                            <a href="/businesscontacts/delete/<%= BusinessContactsList[count]._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>
  </main>

